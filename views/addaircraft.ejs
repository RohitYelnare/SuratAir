<%- include('partials/header') %>

    <title>Add Aircraft</title>
</head>
<body>

    <div class="main">

<!DOCTYPE html>
<html >
<head>
  <meta charset="UTF-8">
      <link rel="stylesheet" href="css/style.css">

</head>

<body>
      <table class="table">
        <thead>
          <tr>
            <!-- <th scope="col">AIRPORT ID</th> -->
            <th scope="col">Aircraft id</i></th>
            <th scope="col">Type</th>
            <th scope="col">Reg</th>
            <th scope="col">Age</th>
            <th scope="col">Capacity</th>
            <th scope="col">Acquire date</th>
            <th scope="col">isOwned</th>
          </tr>
        </thead>
        <tbody>
        <%for(var i=0; i<allfleet.length; i++){%>
            <tr>
                <td><%=allfleet[i].aircraft_id%></td>
                <td><%=allfleet[i].type%></td>
                <td><%=allfleet[i].reg%></td>
                <td><%=allfleet[i].age%></td>
                <td><%=allfleet[i].capacity%></td>
                <td><%=allfleet[i].acquire_date.toString().substring(0,15)%></td>
                <td><%=allfleet[i].isowned%></td>
        <%}%>
        </tbody>
      </table>
      <br>
      <br>
      <br>
      <br>
      <div class="d-flex justify-content-center">
        <form method="POST">
          <p>Aircraft Type:</p>
          <input type="text" name="type" value="B737 MAX-8" readonly> 
          <br>
          <br>
          <p>Aircraft Registration:</p>
          <input type="text" placeholder="Registration" name="reg" maxlength="10" required style="text-transform: uppercase"> 
          <br>
          <br>
          <p>Age:</p>
          <input type="number" placeholder="Age(in yrs)" name="age" min="0" required> 
          <br>
          <br>
          <p>Capacity:</p>
          <input type="number" name="capacity" value="180" readonly> 
          <br>
          <br>
          <p>Date of acquisition:</p>
          <input type="date" name="acquiredate" required> 
          <br>
          <br>
          Owned? <input type="checkbox" name="isowned"> 
          <br>
          <br>
          <button type="submit" id="portsubmit" name="portsubmit" class="btn btn-primary">ADD AIRCRAFT</button>
        </form>
      </div>
</body>
</html>
<%- include('partials/footer') %>
