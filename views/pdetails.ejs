<%- include('partials/header') %>
    <title>Book Flight</title>
</head>
<body>
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Enter passenger details</h2>
                <form method="POST" class="register-form" id="register-form" autocomplete="off">
                    <%for(var i=pcount; i>0; i--){%>
                        <div class="form-group">
                            <label for="name"></label>
                            <input type="text" name="name" id="name" placeholder="Passenger Name"/>
                        </div>
                        <div class="form-group">
                            <label for="gender"></label>
                            <input type="text" name="gender" id="gender" placeholder="Gender"/>
                        </div>
                    <%}%>
                    <div class="form-group form-button">
                        <input type="submit" name="signup" id="signup" class="form-submit" value="Pay"/>
                    </div>
                </form>
            </div>
        </div>
    </div>


<%- include('partials/footer') %>
