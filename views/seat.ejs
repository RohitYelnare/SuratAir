<%- include('partials/header') %>
    <title>Select Seatno</title>
</head>
<body>
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Select Seat</h2>
                <form method="POST" class="register-form" id="register-form" autocomplete="off">
                    <%for(var i=pcount; i>0; i--){%>
                        <div class="form-group">
                            <label for="Seat"></label>
                            <input type="number" name="seatno" id="seatno" placeholder="Seat No"/>
                        </div>
                    <%}%>
                    <div class="form-group form-button">
                        <input type="submit" name="signup" id="signup" class="form-submit" value="Select"/>
                    </div>
                </form>
            </div>
        </div>
    </div>


<%- include('partials/footer') %>
