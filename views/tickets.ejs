<%- include('partials/header') %>

    <title>My tickets</title>
</head>
<body>

    <div class="main">

        <!-- Sign up form -->
        
<!DOCTYPE html>
<html >
<head>
  <meta charset="UTF-8">
  
  
  
      <link rel="stylesheet" href="css/style.css">

  
</head>

<body>
    <%- include('partials/navbar') %>
    <div class="container-fluid">
            <%for (var i=0; i<bookingsoutput.length; i++){%>
                <%if(ticketsoutput[i].length>0){%>
            <h4 style="text-align: center;">Booked on <%=bookingsoutput[i].booking_timestamp.toString().substring(0,15)%></h4>
            <div class="row d-flex justify-content-center">
                
                <div class="card-group d-flex justify-content-center">
                    <%for (var j=0; j<ticketsoutput[i].length; j++){%>
                    
                    <div class="card" style="max-width: 33%; min-width: 33%;">
                        <div class="card-body">
                            <h4 class="card-title"><%=ticketsoutput[i][j].dept_code%> <i class="fas fa-plane-departure" aria-hidden="true"></i> <%=ticketsoutput[i][j].arr_code%></h4>
                            <h5 class="float-start">NAME: <%=ticketsoutput[i][j].name%></h5>
                            <h5 class="float-end">SEAT NO.: <%=ticketsoutput[i][j].seat_no%></h5>
                            <br>
                            <h5> </h5>
                            <br>
                            <h5 class="float-start">FLIGHT NO.: SA <%=ticketsoutput[i][j].flight_id%></h5>
                            <h5 class="float-end">DEPARTURE: <%=ticketsoutput[i][j].dept_date.toString().substring(0,15)%> <%=ticketsoutput[i][j].dept_time.toString().substring(0,5)%></h5>
                        </div>
                        <!-- <div class="card-footer">
                            <small class="text-muted">Last updated 3 mins ago</small>
                        </div> -->
                        <form method="POST">
                            <span class="d-flex justify-content-center">
                                <input type="text" name="ticketid" value="<%=ticketsoutput[i][j].ticket_id%>" style="display: none;">
                                <button class="btn btn-outline-danger" type="submit" value="1"><i class="fa fa-trash"></i> Cancel</button>
                            </span>
                    </form>
                    </div>
                <%}%>
                <%}%>
            </div>
        </div>
        <br>
        <br>
        <%}%>
    </div>
</div>
  <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>

  
</body>
</html>

<%- include('partials/footer') %>